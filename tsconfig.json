{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "noResolve": false,
    "module": "es2015",
    "target": "es5",
    "outDir": "dist-es2015",
    "lib": ["dom", "es5", "es2015"]
  },

  "include": [
    "src/*"
  ],

  "exclude": [
    "dist-*",
    "node_modules"
  ]
}
