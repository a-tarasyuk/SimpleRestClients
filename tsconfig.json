{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "declarationDir": "dist/types",
        "declaration": true,
        "noResolve": false,
        "module": "es2015",
        "target": "es2015",
        "lib": ["dom", "es5", "es2015", "es2016.array.include"]
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "dist",
        "node_modules"
    ]
}