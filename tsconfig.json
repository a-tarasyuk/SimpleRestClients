{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noResolve": false,
        "module": "es2015",
        "target": "es5",
        "outDir": "dist-es2015",
        "lib": ["es2015", "es2016", "dom", "es5"]
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "dist-*",
        "node_modules"
    ]
}